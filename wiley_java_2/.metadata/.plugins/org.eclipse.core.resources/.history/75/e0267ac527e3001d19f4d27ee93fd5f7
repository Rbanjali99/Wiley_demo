	public static void main(String[] args) {
		
		StringBuffer chatHistory = new StringBuffer();
		
		String sender = "Venkat";
		String message = "Hey Anjali!";
		chatHistory.append(sender);
		chatHistory.append(":");
		chatHistory.append(sender);
		System.out.println(chatHistory);
	}

}
